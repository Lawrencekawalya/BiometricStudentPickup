<Window x:Class="BiometricStudentPickup.Views.CreatePinDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Admin PIN"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <StackPanel Margin="20" Width="240">
        <TextBlock
            Text="Create Admin PIN"
            FontWeight="Bold"
            Margin="0,0,0,12"/>

        <TextBlock Text="Enter 6-digit PIN"/>
        <PasswordBox
            x:Name="PinBox"
            MaxLength="6"
            Margin="0,4,0,10"/>

        <TextBlock Text="Confirm PIN"/>
        <PasswordBox
            x:Name="ConfirmPinBox"
            MaxLength="6"
            Margin="0,4,0,12"/>

        <Button
            Content="Save PIN"
            Click="Save_Click"
            Height="30"/>
    </StackPanel>
</Window>
