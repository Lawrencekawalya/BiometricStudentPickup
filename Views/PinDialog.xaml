<Window x:Class="BiometricStudentPickup.Views.PinDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin PIN"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <StackPanel Margin="20">
        <TextBlock Text="Enter Admin PIN" Margin="0,0,0,10"/>
        <PasswordBox x:Name="PinBox" MaxLength="6" Width="200"/>
        <Button Content="Unlock"
                Margin="0,10,0,0"
                Width="200"
                Click="Unlock_Click"/>
    </StackPanel>
</Window>
