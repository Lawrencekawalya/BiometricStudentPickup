<Window x:Class="BiometricStudentPickup.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:converters="clr-namespace:BiometricStudentPickup.Models"
        Title="Biometric Student Pickup – Gate Control"
        Height="720"
        Width="1280"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="Segoe UI">

    <Window.Resources>
        <!-- Add converter -->
        <converters:StatusToTextConverter x:Key="StatusToTextConverter"/>
        <!-- Custom Styles -->
        <Style x:Key="PrimaryButtonStyle"
               TargetType="Button">
            <Setter Property="materialDesign:ButtonAssist.CornerRadius"
                    Value="8"/>
            <Setter Property="Height"
                    Value="48"/>
            <Setter Property="FontSize"
                    Value="14"/>
            <Setter Property="FontWeight"
                    Value="SemiBold"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Padding"
                    Value="24,12"/>
            <Setter Property="HorizontalContentAlignment"
                    Value="Center"/>
        </Style>

        <Style x:Key="StatusCardStyle"
               TargetType="Border">
            <Setter Property="Background"
                    Value="{DynamicResource PrimaryHueLightBrush}"/>
            <Setter Property="BorderBrush"
                    Value="{DynamicResource PrimaryHueMidBrush}"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="CornerRadius"
                    Value="8"/>
            <Setter Property="Padding"
                    Value="16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="12"
                                      Opacity="0.08"
                                      ShadowDepth="4"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="QueueItemStyle"
               TargetType="Border">
            <Setter Property="Background"
                    Value="White"/>
            <Setter Property="CornerRadius"
                    Value="6"/>
            <Setter Property="Padding"
                    Value="16,12"/>
            <Setter Property="Margin"
                    Value="0,0,0,8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8"
                                      Opacity="0.05"
                                      ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:Card Grid.Row="0"
                             Margin="0,0,0,20"
                             Padding="24"
                             Background="{DynamicResource PrimaryHueLightBrush}">
            <DockPanel>
                <!-- Logo/Title -->
                <StackPanel DockPanel.Dock="Left">
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="School"
                                                 Width="36"
                                                 Height="36"
                                                 Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                 Margin="0,0,16,0"/>
                        <StackPanel>
                            <TextBlock Text="BIOMETRIC STUDENT PICKUP"
                                       Foreground="{DynamicResource PrimaryHueMidForegroundBrush}"
                                       FontSize="24"
                                       FontWeight="Bold"/>
                            <TextBlock Text="Secure Gate Control System"
                                       Foreground="{DynamicResource MaterialDesignBody}"
                                       FontSize="14"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <!-- Status Indicator -->
                <Border DockPanel.Dock="Right"
                        Background="{DynamicResource MaterialDesignBackground}"
                        CornerRadius="6"
                        Padding="9,8"
                        Margin="30,0,8,0"
                        VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="10"
                                 Height="10"
                                 Fill="#22C55E"
                                 Margin="0,0,8,0"/>
                        <TextBlock Text="SYSTEM READY"
                                   Foreground="{DynamicResource MaterialDesignBody}"
                                   FontWeight="SemiBold"
                                   FontSize="13"/>
                    </StackPanel>
                </Border>
            </DockPanel>
        </materialDesign:Card>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.2*"/>
                <ColumnDefinition Width="0.1*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Control Center -->
            <materialDesign:Card Grid.Column="0"
                                 Padding="24"
                                 Margin="0,0,12,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Current Pickup Section -->
                        <StackPanel Margin="0,0,0,24">
                            <TextBlock Text="CURRENT PICKUP"
                                       Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                                       Margin="0,0,0,12"/>

                            <Border Style="{StaticResource StatusCardStyle}">
                                <StackPanel>
                                    <TextBlock Text="Now Calling"
                                               Style="{StaticResource MaterialDesignBody2TextBlock}"
                                               Foreground="{DynamicResource PrimaryHueMidBrush}"/>

                                    <TextBlock x:Name="NowCallingName"
                                               Text="Waiting for next student..."
                                               Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                               Foreground="{DynamicResource PrimaryHueMidBrush}"
                                               Margin="0,4,0,4"/>

                                    <TextBlock x:Name="NowCallingClass"
                                               Text=""
                                               Style="{StaticResource MaterialDesignBody1TextBlock}"
                                               Foreground="{DynamicResource MaterialDesignBody}"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- Quick Actions -->
                        <StackPanel Margin="0,0,0,24">
                            <TextBlock Text="QUICK ACTIONS"
                                       Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                                       Margin="0,0,0,12"/>

                            <!-- Enrollment Button -->
                            <Button x:Name="OpenEnrollmentButton"
                                    Content="ENROLLMENT MANAGEMENT"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Background="{DynamicResource PrimaryHueMidBrush}"
                                    Foreground="{DynamicResource PrimaryHueMidForegroundBrush}"
                                    Click="OpenEnrollment_Click"
                                    Margin="0,0,0,12">
                                <Button.ContentTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal"
                                                    HorizontalAlignment="Center">
                                            <materialDesign:PackIcon Kind="Fingerprint"
                                                                     Width="20"
                                                                     Height="20"
                                                                     Margin="0,0,8,0"/>
                                            <TextBlock Text="{Binding}"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </Button.ContentTemplate>
                            </Button>

                            <!-- Student Management -->
                            <Button x:Name="OpenStudentManagementButton"
                                    Content="STUDENT MANAGEMENT"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Background="#10B981"
                                    Foreground="White"
                                    Click="OpenStudentManagementButton_Click"
                                    Margin="0,0,0,12">
                                <Button.ContentTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal"
                                                    HorizontalAlignment="Center">
                                            <materialDesign:PackIcon Kind="AccountMultiple"
                                                                     Width="20"
                                                                     Height="20"
                                                                     Margin="0,0,8,0"/>
                                            <TextBlock Text="{Binding}"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </Button.ContentTemplate>
                            </Button>
                        </StackPanel>

                        <!-- Reports Section -->
                        <StackPanel>
                            <TextBlock Text="REPORTS"
                                       Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                                       Margin="0,0,0,12"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Attendance Report -->
                                <Button x:Name="ViewAttendanceButton"
                                        Grid.Column="0"
                                        Content="ATTENDANCE"
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        Background="#8B5CF6"
                                        Foreground="White"
                                        FontSize="12"
                                        Click="ViewAttendanceButton_Click"
                                        Margin="0,0,6,0">
                                    <Button.ContentTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal"
                                                        HorizontalAlignment="Center">
                                                <materialDesign:PackIcon Kind="ChartBar"
                                                                         Width="18"
                                                                         Height="18"
                                                                         Margin="0,0,6,0"/>
                                                <TextBlock Text="{Binding}"
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </Button.ContentTemplate>
                                </Button>

                                <!-- Pickup Report -->
                                <Button x:Name="ViewPickupReportButton"
                                        Grid.Column="1"
                                        Content="PICKUP LOGS"
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        Background="#EC4899"
                                        Foreground="White"
                                        FontSize="12"
                                        Click="ViewPickupReportButton_Click"
                                        Margin="6,0,0,0">
                                    <Button.ContentTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal"
                                                        HorizontalAlignment="Center">
                                                <materialDesign:PackIcon Kind="ClipboardText"
                                                                         Width="18"
                                                                         Height="18"
                                                                         Margin="0,0,6,0"/>
                                                <TextBlock Text="{Binding}"
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </Button.ContentTemplate>
                                </Button>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </materialDesign:Card>

            <!-- Divider -->
            <Border Grid.Column="1"
                    Background="{DynamicResource MaterialDesignDivider}"
                    Width="1"
                    Margin="6,0"/>

            <!-- Right Panel - Queue -->
            <materialDesign:Card Grid.Column="2"
                                 Padding="24"
                                 Margin="12,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Queue Header -->
                    <DockPanel Grid.Row="0"
                               Margin="0,0,0,20">
                        <StackPanel DockPanel.Dock="Left">
                            <TextBlock Text="PICKUP QUEUE"
                                       Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                       Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                            <TextBlock Text="Students awaiting guardian pickup"
                                       Style="{StaticResource MaterialDesignBody2TextBlock}"
                                       Margin="0,4,0,0"/>
                        </StackPanel>

                        <Border DockPanel.Dock="Right"
                                Background="{DynamicResource PrimaryHueLightBrush}"
                                CornerRadius="6"
                                Padding="12,8"
                                Margin="30,0,8,0">
                            <TextBlock Text="{Binding QueueService.Queue.Count, StringFormat='\{0\} STUDENTS'}"
                                       Foreground="{DynamicResource PrimaryHueMidForegroundBrush}"
                                       FontWeight="SemiBold"
                                       FontSize="12"
                                       Padding="12,8"/>
                        </Border>
                    </DockPanel>

                    <!-- Queue List -->
                    <Border Grid.Row="1"
                            BorderThickness="1"
                            BorderBrush="{DynamicResource MaterialDesignDivider}"
                            CornerRadius="8"
                            Padding="1"
                            Background="{DynamicResource MaterialDesignBackground}">

                        <ItemsControl x:Name="PickupQueueList"
                                      ItemsSource="{Binding QueueService.Queue}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource QueueItemStyle}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Queue Number -->
                                            <Border Grid.Column="0"
                                                    Background="{DynamicResource PrimaryHueLightBrush}"
                                                    Width="32"
                                                    Height="32"
                                                    CornerRadius="16"
                                                    VerticalAlignment="Center">
                                                <TextBlock Text="{Binding QueueNumber}"
                                                           Foreground="{DynamicResource PrimaryHueMidForegroundBrush}"
                                                           FontWeight="Bold"
                                                           FontSize="14"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Border>

                                            <!-- Student Info -->
                                            <StackPanel Grid.Column="1"
                                                        VerticalAlignment="Center"
                                                        Margin="16,0">
                                                <TextBlock Text="{Binding StudentName}"
                                                           Style="{StaticResource MaterialDesignSubtitle2TextBlock}"/>
                                                <TextBlock Text="{Binding ClassName}"
                                                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                                                           Margin="0,2,0,0"/>
                                            </StackPanel>

                                            <!-- Status -->
                                            <Border Grid.Column="2"
                                                    Background="{DynamicResource PrimaryHueLightBrush}"
                                                    CornerRadius="4"
                                                    Padding="8,4"
                                                    VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Status, Converter={StaticResource StatusToTextConverter}}"
                                                           Foreground="{DynamicResource PrimaryHueMidForegroundBrush}"
                                                           FontWeight="SemiBold"
                                                           FontSize="10"/>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>

                            <ItemsControl.Template>
                                <ControlTemplate TargetType="ItemsControl">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </ControlTemplate>
                            </ItemsControl.Template>
                        </ItemsControl>
                    </Border>
                </Grid>
            </materialDesign:Card>
        </Grid>

        <!-- Footer - Single Line -->
        <Border Grid.Row="2"
                Background="{DynamicResource MaterialDesignBackground}"
                Padding="16,10"
                Margin="0,0,0,0"
                BorderThickness="1,5,1,1"
                BorderBrush="{DynamicResource MaterialDesignDivider}">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">

                <!-- App Name -->
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="School"
                                             Width="14"
                                             Height="14"
                                             Foreground="{DynamicResource PrimaryHueMidBrush}"
                                             VerticalAlignment="Center"
                                             Margin="0,0,6,0"/>
                    <TextBlock Text="Biometric Student Pickup"
                               Style="{StaticResource MaterialDesignCaptionTextBlock}"
                               Foreground="{DynamicResource MaterialDesignBody}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Separator -->
                <TextBlock Text=" | "
                           Style="{StaticResource MaterialDesignCaptionTextBlock}"
                           Foreground="{DynamicResource MaterialDesignDivider}"
                           VerticalAlignment="Center"
                           Margin="8,0"/>

                <!-- Version -->
                <TextBlock Text="v2.1.3"
                           Style="{StaticResource MaterialDesignCaptionTextBlock}"
                           Foreground="{DynamicResource MaterialDesignBody}"
                           VerticalAlignment="Center"/>

                <!-- Separator -->
                <TextBlock Text=" | "
                           Style="{StaticResource MaterialDesignCaptionTextBlock}"
                           Foreground="{DynamicResource MaterialDesignDivider}"
                           VerticalAlignment="Center"
                           Margin="8,0"/>

                <!-- Copyright -->
                <TextBlock Text="© 2026"
                           Style="{StaticResource MaterialDesignCaptionTextBlock}"
                           Foreground="{DynamicResource MaterialDesignBody}"
                           VerticalAlignment="Center"/>

                <!-- Separator -->
                <TextBlock Text=" | "
                           Style="{StaticResource MaterialDesignCaptionTextBlock}"
                           Foreground="{DynamicResource MaterialDesignDivider}"
                           VerticalAlignment="Center"
                           Margin="8,0"/>

                <!-- System Status -->
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="CheckCircle"
                                             Width="14"
                                             Height="14"
                                             Foreground="#22C55E"
                                             VerticalAlignment="Center"
                                             Margin="0,0,6,0"/>
                    <TextBlock Text="Powered By Syntax Systems Ltd"
                               Style="{StaticResource MaterialDesignCaptionTextBlock}"
                               Foreground="{DynamicResource MaterialDesignBody}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Separator -->
                <TextBlock Text=" | "
                           Style="{StaticResource MaterialDesignCaptionTextBlock}"
                           Foreground="{DynamicResource MaterialDesignDivider}"
                           VerticalAlignment="Center"
                           Margin="8,0"/>

                <!-- Sync Status -->
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="Sync"
                                             Width="14"
                                             Height="14"
                                             Foreground="{DynamicResource PrimaryHueMidBrush}"
                                             VerticalAlignment="Center"
                                             Margin="0,0,6,0"/>
                    <TextBlock Style="{StaticResource MaterialDesignCaptionTextBlock}"
                               VerticalAlignment="Center">
                    Last sync: 
                    <Run Text="Just Now"
                         Foreground="#10B981"
                         FontWeight="Medium"/>
                    </TextBlock>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</Window>