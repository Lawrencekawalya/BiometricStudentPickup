<Window x:Class="BiometricStudentPickup.Views.PickupReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.microsoft.com/winfx/2006/xaml/markup"
        xmlns:local="clr-namespace:BiometricStudentPickup.Views"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Pickup Report" 
        Height="600" 
        Width="900"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="DatePicker">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Width" Value="120"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Width" Value="150"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Width" Value="150"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Pickup History Report" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Margin="0,0,0,10"/>
        
        <!-- Filter Controls -->
        <Border Grid.Row="1" 
                BorderBrush="LightGray" 
                BorderThickness="1" 
                CornerRadius="5" 
                Padding="10" 
                Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Date Range - Row 0 -->
                <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Label Content="From:" VerticalAlignment="Center"/>
                    <DatePicker x:Name="DateFromPicker" 
                                Width="120"
                                VerticalAlignment="Center"
                                SelectedDate="{x:Static sys:DateTime.Now}"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Horizontal" Margin="10,0,0,0" VerticalAlignment="Center">
                    <Label Content="To:" VerticalAlignment="Center"/>
                    <DatePicker x:Name="DateToPicker" 
                                Width="120"
                                VerticalAlignment="Center"
                                SelectedDate="{x:Static sys:DateTime.Now}"/>
                </StackPanel>
                
                <!-- Student Filter - Row 0 -->
                <StackPanel Grid.Column="2" Grid.Row="0" Orientation="Horizontal" Margin="10,0,0,0" VerticalAlignment="Center">
                    <Label Content="Student:" VerticalAlignment="Center"/>
                    <ComboBox x:Name="StudentFilterComboBox" 
                            Width="150"
                            DisplayMemberPath="FullName"
                            SelectedValuePath="LocalId"
                            VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- Event Type Filter - Row 1, Span 2 columns -->
                <StackPanel Grid.Column="0" Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,0" VerticalAlignment="Center">
                    <Label Content="Event Type:" VerticalAlignment="Center"/>
                    <ComboBox x:Name="EventTypeComboBox" Width="150" VerticalAlignment="Center">
                        <ComboBoxItem Content="All Events" Tag="All"/>
                        <ComboBoxItem Content="Guardian Scan" Tag="GuardianScan"/>
                        <ComboBoxItem Content="Pickup Complete" Tag="PickupComplete"/>
                        <ComboBoxItem Content="Pickup Timeout" Tag="PickupTimeout"/>
                        <ComboBoxItem Content="Pickup Requested" Tag="Requested"/>
                    </ComboBox>
                </StackPanel>
                
                <!-- Filter Buttons - Row 1, Column 4-5 -->
                <StackPanel Grid.Column="4" Grid.Row="1" Grid.ColumnSpan="2" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right"
                            Margin="0,10,0,0">
                    <Button x:Name="ClearFiltersButton"
                            Content="Clear Filters" 
                            Click="ClearFilters_Click" 
                            Background="#f0f0f0" 
                            Foreground="#333"
                            FontWeight="Normal"
                            Margin="0,0,10,0"
                            Padding="10,5"/>
                    
                    <Button x:Name="ApplyFiltersButton"
                            Content="Apply Filters" 
                            Click="ApplyFilters_Click" 
                            Background="#4CAF50" 
                            Foreground="White"
                            FontWeight="Bold"
                            Padding="10,5"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Data Grid -->
        <DataGrid x:Name="PickupDataGrid" 
                  Grid.Row="2" 
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserReorderColumns="False"
                  CanUserResizeRows="False"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  GridLinesVisibility="Horizontal"
                  RowDetailsVisibilityMode="Collapsed"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Date/Time" 
                                    Binding="{Binding Timestamp, StringFormat='yyyy-MM-dd HH:mm:ss'}"
                                    Width="140"/>
                <DataGridTextColumn Header="Event Type" 
                                    Binding="{Binding EventType}"
                                    Width="120"/>
                <DataGridTextColumn Header="Student ID" 
                                    Binding="{Binding StudentId}"
                                    Width="80"/>
                <DataGridTextColumn Header="Student Name" 
                                    Binding="{Binding StudentName}"
                                    Width="150"/>
                <DataGridTextColumn Header="Class" 
                                    Binding="{Binding ClassName}"
                                    Width="100"/>
                <DataGridTextColumn Header="Guardian ID" 
                                    Binding="{Binding GuardianId}"
                                    Width="80"/>
                <DataGridTextColumn Header="Guardian Name" 
                                    Binding="{Binding GuardianName}"
                                    Width="150"/>
                <DataGridTextColumn Header="Details" 
                                    Binding="{Binding Details}"
                                    Width="200"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <!-- Footer Controls -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Export to CSV" 
                    Click="ExportToCsv_Click"
                    ToolTip="Export filtered data to CSV file"
                    Margin="5"/>
            <Button Content="Print Report" 
                    Click="PrintReport_Click"
                    ToolTip="Print the current report"
                    Margin="5"/>
            <Button Content="Close" 
                    Click="CloseButton_Click"
                    Margin="5"
                    Width="80"/>
        </StackPanel>
    </Grid>
</Window>